

{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple radial chart with embedded data.",
  "title": "Percentage of Contribution to Green house Gases by Each Sector",
  "background": "#f6f4f3",
  "data": {
    "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/donut.csv"
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 25, "stroke": "black"}
  },{
    "mark": {"type": "text", "radiusOffset": 10},
    "encoding": {
      "text": {"field": "Percentage", "type": "quantitative"}
    }
  }],
  "encoding": {
    "theta": {"field": "Percentage", "type":
    "quantitative", "stack": true
    },
    "radius": {"field": "Percentage", "scale":{"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": 
    {"field": "Sector", 
    "type": "nominal", 
    "legend": null,
    "scale":{
      "domain":
      [
        "Transportation",
        "Electricity & Heat Production",
        "Industry",
        "Other Energy",
        "Forestry & Agricultural",
        "Construction"
      ],
      "range":[
        "#a6611a",
"#dfc27d",
"#f5f5f5",
"#80cdc1",
"#018571",
"#01665e"

          ]
      }
    
    },
    "tooltip": [
            {
              "field": "Percentage",
              "title": "Percentage"
            },
            {
              "field": "Sector",
              "title": "Sector"
            }
          ]
  },
  "view": {"stroke": null}
}
