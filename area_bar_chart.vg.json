{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#f6f4f3",
   "vconcat": [
     {
  "width": 300, "height": 200,
  "data": {"url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/protein.csv"},
  "selection": {
          "click": {
            "fields": ["Meat"],
            "type": "single",
            "clear": false
          },
          "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
          "select": {"type": "multi"}
        },
  "mark": {
    "type": "area",
    "stroke": "black",
    "cursor": "pointer"
  },
  
  
  "encoding": {
    "x": {
      "timeUnit": "year", "field": "Year",
      "axis": {"format": "%Y"}
    },
    "y": {
      "aggregate": "sum","field": "Consumption"
    },
    "color": {
      "field": "Meat",
      "type": "nominal",
      "scale": {"range": ["#234a9e", "#2174b1", "#2fa0c0", "#60c1bf", "#b7e3b5"]}
      
    },
    "tooltip": [
            {
              "field": "Meat",
              "title": "Type of Meat"
            },
            {
              "field": "Consumption",
              "title": "Amount of consumption"
            },
            {
              "field": "year_Year",
              "title": "Year"
            }
          ],
          "fillOpacity": {
      "condition": {"selection": "select", "value": 1},
      "value": 0.3
    } ,
     "strokeWidth": {
      "condition": [
        {
          "test": {
            "and": [
              {"selection": "select"},
              "length(data(\"select_store\"))"
            ]
          },
          "value": 2
        },
        {"selection": "highlight", "value": 1}
      ],
      "value": 0
    }  
   }
     },
     
   {
     "hconcat":[{
   "data": {
    "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/barchart_meat.csv"
  },
  "transform": [
          {"filter": {"selection": "click"}}
          ]
          ,
  "mark":"bar",
  "encoding": {
  "x": {"field": "Category", "type": "nominal", "axis": {"labelAngle": 0},
  "title":""
  },
    "y": {"field": "Value", "type": "quantitative",
    "axis":null,
    "scale": {"domain": [0, 55]}},
    
    "tooltip": [
            {
              "field": "Category",
              "title": "Category"
            },
            {
              "field": "Value",
              "title": "Ethnicity"
            }
          ]
  }
  }
   ,
      {
   "data": {
    "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/eutrophying.csv"
  },
  "transform": [
          {"filter": {"selection": "click"}}
          ]
          ,
  "mark":"bar",
  "encoding": {
  "x": {"field": "Category", "type": "nominal", "axis": {"labelAngle": 0},
  "title":""
  },
    "y": {"field": "Value", "type": "quantitative",
    "axis":null,
    "scale": {"domain": [0, 300]}},
    "tooltip": [
            {
              "field": "Category",
              "title": "Category"
            },
            {
              "field": "Value",
              "title": "Ethnicity"
            }
          ]
  }
   },
   {
   "data": {
    "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/water_footprint.csv"
  },
  "transform": [
          {"filter": {"selection": "click"}}
          ]
          ,
  "mark":"bar",
  "encoding": {
  "x": {"field": "Category", "type": "nominal", "axis": {"labelAngle": 0},
  "title":""
  },
    "y": {"field": "Value", "type": "quantitative",
    "axis":null,
    "scale": {"domain": [0, 3600]}},
    "tooltip": [
            {
              "field": "Category",
              "title": "Category"
            },
            {
              "field": "Value",
              "title": "Ethnicity"
            }
          ]
          
  }
   }
     ]
   }
   ]
  
  
}
