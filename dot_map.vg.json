{
"$schema": "https://vega.github.io/schema/vega-lite/v4.json", 

"width": 600, "height": 400, 

"title": "Wildfires in America", 

"background": "#f6f4f3",

"projection": {"type": "equirectangular"}, 

"params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "select",
        "options": [
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018"
        ],
        "labels":[
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018"
],
        "name": "Year Selection: "
      }
},
  { "name": "Year_Slider", 
       "value": 2008, 
       "bind": 
        { "input": "range", "min": 2008,
          "max": 2018, 
          "step": 1, 
          "name": "Year"
          } }
],


"layer": [ 
    { "data": { "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/admin1-us.topojson",
          "format": {"type": "topojson", "feature": "admin1-us"} },
          "mark": {"type": "geoshape", 
          "fill": "white", 
          "stroke": "black"} },

{ "data": 
    { "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/wildfire_map.csv" }, 
"transform": 
   [ 
   {"filter": "datum.Year == Year_Slider"}],

"encoding": { 
  "longitude": 
    {"field": "X", "type": "quantitative"}, 
    "latitude": 
    {"field": "Y", "type": "quantitative"} 
  },

"layer": [ 
  { 
    "mark": "circle",
    "encoding": { 
          "color":{
          "field": "Category",
          "type":"nominal",
          "scale": 
          { "domain": 
          [ "Least Severe", 
          "Less Severe", 
          "Moderate", 
          "Severe", 
          "Very Severe", 
          "Extremely Severe" 
          ], 
          "range": 
          [ "#d73027",
"#fc8d59",
"#fee08b",
"#d9ef8b",
"#91cf6",
"#1a9850"
 ] }
          },
          "opacity": { "value": 0.6 },
        
        "size": 
        {"field": "Acres Burned", 
        "type": "quantitative", 
        "scale":
          {"domain": [5000,10000,20000,40000,60000,100000],
          "range":[50, 100,200,350,450,600,700], 
          "clamp": true}
        },
        "tooltip": [
      {"field": "Acres Burned", "type": "quantitative"},
      {"field": "State", "type": "nominal"}] 
    }
    
    } ] 
} ] 
}
