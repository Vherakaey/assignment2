{ "$schema": "https://vega.github.io/schema/vega-lite/v4.json", 

  "width": 500, 
  "height": 400, 
  "title": "Co2 Emmissions and Human Development Index per Country", 
  "data": { "url": "https://raw.githubusercontent.com/Vherakaey/assignment2/main/bubbleChart.csv" }, 

  "params": [ { "name": "Continent_selection",
    "bind": { "input": "select", 
      "options": 
      [ null, 
      "North America", 
      "South America", 
      "Europe", 
      "Africa", 
      "Asia", 
      "Oceania" ], 
      "labels":[ "Show All", 
      "North America", 
      "South America", 
      "Europe", 
      "Africa",
       "Asia", 
       "Oceania" ], 
       "name": "Continent Selection: " } 
       },
       { "name": "Year_Slider", 
       "value": 2000, 
       "bind": 
        { "input": "range", "min": 2000,
          "max": 2016, 
          "step": 1, 
          "name": "Year"
          } }
        ],

  "transform": [ 
    {"filter": "datum.HDI > 0"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
    {"filter": "datum.Year == Year_Slider"},
    {"filter": "datum.CO2Emissions > 0"}
    
    ],
  
  "mark": "circle", 
    "encoding": { 
        "x": { 
          "field": "CO2Emissions", 
          "type": "quantitative", 
          "title": "Co2 Emmissions",
          "axis": {"tickCount": 3},
          "scale": {"type": "log", "domain": [0.01, 70]}
          
          }, 
        "y": { 
          "field": "HDI", 
          "type": "quantitative",
          "title": "Human Development Index"
          }, 
        "color": { 
          "field": "Continent",
          "type":"nominal",
          "scale": 
          { "domain": 
          [ "North America", 
          "South America", 
          "Europe", 
          "Africa", 
          "Asia", 
          "Oceania" 
          ], 
          "range": 
          [ "#35978f",
          "#74a9cf",
          "#8c6bb1",
          "#08589e",
          "#fcbba1",
          "#a8ddb5" ] }
          },
          "opacity": { "value": 0.7 },
          
        "size": 
        { "field": "Population", 
        "type": "quantitative",
        "scale": 
          { "type": "threshold", 
          "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
          "range": [50, 100, 300, 500, 600, 800] },
          "legend": {"format": ".1s"}
        },
        "tooltip": [ 
          {"field": "CountryName", "type":"nominal"}, 
          {"field": "CountryName", "type": "nominal"}, 
          {"field": "Continent", "type": "nominal"}, 
          {"field": "CO2Emissions", "type": "quantitative"},
          {"field": "HDI", "type": "quantitative"}
           ] 
      } 

}

